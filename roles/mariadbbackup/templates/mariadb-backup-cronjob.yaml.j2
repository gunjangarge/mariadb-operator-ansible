---
apiVersion: batch/v1beta1
kind: CronJob
metadata:
 name: {{meta.namespace}}-{{meta.name}}-{{mysql_database_to_backup.split('_') | join('-')}}
 namespace: "{{meta.namespace}}"
spec:
 schedule: "{{mariadb_backup_schedule}}"
 jobTemplate:
  spec:
   template:
    spec:
      containers:
      - name: database-backup
        image: "{{db_image}}"
        args:
        - /bin/sh
        - -c
        - mysqldump --host {{ip}} --port 3306 --user {{mysql_user}} --password={{mysql_user_password}} --databases {{mysql_database_to_backup}} {{mariadb_mysqldump_options}} > /opt/mysqldump-{{mysql_database_to_backup}}-$(date +'%Y-%b-%d-%H%M%S%Z').sql
        volumeMounts:
        - mountPath: /opt
          name: mariadb-databackup
      restartPolicy: OnFailure
      volumes:
        - name: mariadb-databackup
          persistentVolumeClaim:
            claimName: {{meta.namespace}}-{{meta.name}}-mariadb-backup-pvc
