--- 
apiVersion: v1
kind: Service
metadata:
  name: {{meta.namespace}}-mariadb-monitor-service
  namespace: "{{meta.namespace}}"
  labels:
    app: mariadb-monitor
    mariadb_cluster: "{{meta.namespace}}-{{meta.name}}"
spec: 
  ports: 
    - nodePort: {{monitor_service_port}}
      port: 9104
      targetPort: 9104
      name: monitor-port
  selector: 
    app: mariadb-monitor
  type: NodePort
